<h1 class="text-center my-5">Editar post de Formar Banda</h1>

<form action="/formarbanda/{{formarbanda.id}}/edit" method="post">

  <div class="d-flex flex-column justify-content-center align-content-center align-items-center w-100">
    <div data-mdb-input-init class="form-outline mb-4 w-75">
      <input type="text" id="name" name="name" class="form-control {{#if errors.name}}is-invalid{{/if}}" value="{{formarbanda.name}}" />
      <label class="form-label" for="name">Nombre de la banda*</label>
      {{#if errors.name}}<div class="invalid-feedback">{{errors.name}}</div>{{/if}}
    </div>

    <div class="form-group mb-2 w-75">
      <select class="form-select {{#if errors.musicalGenre}}is-invalid{{/if}}" name="musicalGenre" id="musicalGenre" >
        {{#each genre}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
      <label for="musicalGenre" class="form-label">Género musical*</label>
      {{#if errors.musicalGenre}}<div class="invalid-feedback">{{errors.musicalGenre}}</div>{{/if}}
    </div>

    <div data-mdb-input-init class="form-outline mb-4 w-75">
      <select class="form-select" name="instruments" multiple aria-label="Multiple select example">
        {{#each inst}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
      <label class="form-label" for="instruments">Instrumentos*</label>
    </div>

    <div data-mdb-input-init class="form-outline mb-4 w-75">
      <input type="text" id="location" name="location" class="form-control {{#if errors.location}}is-invalid{{/if}}" value="{{formarbanda.location}}" />
      <label class="form-label" for="location">Ubicación*</label>
      {{#if errors.location}}<div class="invalid-feedback">{{errors.location}}</div>{{/if}}
    </div>

    <div data-mdb-input-init class="form-outline mb-4 w-75">
      <textarea class="form-control {{#if errors.lookingfor}}is-invalid{{/if}}" id="lookingfor" name="lookingfor" rows="4">{{formarbanda.lookingfor}}</textarea>
      <label class="form-label" for="lookingfor">Cuéntanos, ¿qué estás buscando?*</label>
      {{#if errors.lookingfor}}<div class="invalid-feedback">{{errors.lookingfor}}</div>{{/if}}
    </div>

    <!-- Submit button -->
    <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block mb-4 w-25 fs-5">Editar <i class="bi bi-pencil"></i></button>
  </div>
</form>

<a href="/formarbanda/{{formarbanda.id}}/details" class="btn btn-outline-info text-white fs-5 my-5">Volver</a>

