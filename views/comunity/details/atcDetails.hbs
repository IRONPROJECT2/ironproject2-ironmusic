<h1>ver los post de anuncia tu concierto</h1>

  <h1>{{postBand.name}}</h1>
  <h5>descripción: {{ postBand.descriptionGenre}}</h5>
  <p>locación: {{postBand.location}}</p>

  {{#each postBand}}
    {{#theUserIsTheCreator ../currentUser creator}}
      <a href="/anunciatuconcierto/{{_id}}/edit">Editar</a>
      <form action="/anunciatuconcierto/{{_id}}/delete" method="post">
        <button type="submit" class="btn btn-primary btn-block mb-4">Eliminar</button>
      </form>
    {{/theUserIsTheCreator}}
  {{/each}}


<form action="/message/{{postBand.id}}/message" method="post">
  <input type="hidden" name="postType" value="Anunciatuconcierto">
  <input type="hidden" name="post" value="{{postBand.id}}">

  <div class="mb-1 {{#if errors.description }}is-invalid{{/if}}">
    <textarea name="text" id="description-md" class="{{#if errors.description }}is-invalid{{/if}}"></textarea>
    {{#if errors.description }}<div class="invalid-feedback">{{errors.description}}</div>{{/if}}
  </div>

  <div class="form-actions mt-2">
    <button type="submit" class="btn btn-outline-primary">Enviar</button>
  </div>
</form>

<script>window.addEventListener('load', () => new SimpleMDE({ element: document.getElementById('description-md') }))</script>