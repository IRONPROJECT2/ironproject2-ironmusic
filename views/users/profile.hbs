<h1>Mi perfil</h1>

<p></p>
{{currentUser.userName}}
{{currentUser.name}}
{{currentUser.email}}
{{currentUser.gender}}
{{currentUser.photo}}
<ul>
{{#each currentUser.instruments}}
  <li>{{this}}</li>
{{/each}}
</ul>
{{currentUser.description}}
{{currentUser.location}}
{{currentUser.socialMedia}}

{{#each bands}}
  {{#isAdministrator this ../currentUser}}
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <ul class="list-unstyled">
          {{#each members}}
            {{#isAdministratorInTheBand ../administrator this}}
              <div class="d-flex justify-content-between">
                  <li class="text-decoration-none">{{this.name}}</li>
              </div>
            {{else}}
              <div class="d-flex justify-content-between">
                <li class="text-decoration-none">{{this.name}}</li>
                <a href="/user/{{this.id}}/removeMember?bandId={{../_id}}"><i class="fas fa-user-xmark" style="color: red;"></i></a>
              </div>
            {{/isAdministratorInTheBand}}
          {{/each}}
        </ul>
      {{#each pendingMembers}}
        <h5 class="card-title">{{name}}</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">{{email}}</h6>
        <p class="card-text">{{this.description}}</p>
        <form action="/pendingMembers/{{this.id}}/accept?bandId={{../_id}}" method="post"><button class="btn btn-primary" type="submit">Aceptar</button></form>
        <form action="/pendingMembers/{{this.id}}/decline?bandId={{../_id}}" method="post"><button class="btn btn-danger" type="submit">No aceptar</button></form>
      {{/each}}
      </div>
    </div>
  {{/isAdministrator}}
{{/each}}


