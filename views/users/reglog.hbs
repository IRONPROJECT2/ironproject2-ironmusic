<form action="/login" method="post" class="p-5 shadow-lg">

  <div class="d-flex flex-column align-items-center justify-content-center">
    <div data-mdb-input-init class="form-outline mb-4 w-75">
      <input type="text" name="userName" id="userName" class="form-control w-100 {{#if errors.userName }}is-invalid{{/if}}"/>
      <label class="form-label" for="userName">Nombre de usuario</label>
      {{#if errors.userName}}<div class="invalid-feedback">{{errors.userName}}</div>{{/if}}
    </div>

    <!-- Password input -->
    <div data-mdb-input-init class="form-outline mb-4 w-75">
      <input type="password" name="password" id="password" class="form-control w-100 {{#if errors.password }}is-invalid{{/if}}"/>
      <label class="form-label" for="password">Contraseña</label>
      {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
    </div>
  </div>

  <!-- 2 column grid layout for inline styling -->
  <div class="mb-4 d-flex justify-content-center">
    <div class="d-flex justify-content-center me-4">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form2Example34" checked />
        <label class="form-check-label" for="form2Example34"> Recuérdame </label>
      </div>
    </div>

    <div>
      <!-- Simple link -->
      <a href="#!">¿Olvidaste la contraseña?</a>
    </div>
  </div>

  <!-- Submit button -->
  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-primary btn-block mb-4">Vamos allá</button>
  </div>
  <!-- Register buttons -->
  <div class="text-center">
    <p>¿No eres miembro aún? <a data-bs-toggle="collapse" href="#collapseRegister" role="button"
      aria-expanded="false" aria-controls="collapseRegister">Registrarme</a></p>
    <p>o inicia sesión con:</p>
    <button  data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
      <i class="fab fa-facebook-f"></i>
    </button>

    <button  data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
      <i class="fab fa-google"></i>
    </button>

    <button  data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
      <i class="fab fa-twitter"></i>
    </button>

    <button  data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
      <i class="fab fa-github"></i>
    </button>
  </div>
</form>


<section class="collapse mb-5" id="collapseRegister">
  <div class="tab-pane shadow-lg p-5 mt-5 " id="pills-register" role="tabpanel" aria-labelledby="tab-register">
    <form action="/register" method="post" >
      <!-- Name input -->
      <div class="d-flex flex-column justify-content-center align-content-center align-items-center">
        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <input type="text" id="userNameRegister" name="userName" class="form-control {{#if errors.nameUser }}is-invalid{{/if}}" placeholder="Pepe_limon"/>
          <label class="form-label" for="userNameRegister">Nombre de usuario*</label>
          {{#if errors.nameUser}}<div class="invalid-feedback">{{errors.nameUser}}</div>{{/if}}
        </div>

        <!-- Username input -->
        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <input type="text" id="name" name="name" class="form-control {{#if errors.name }}is-invalid{{/if}}" placeholder="Juan Perez"/>
          <label class="form-label" for="name">Nombre completo*</label>
          {{#if errors.name}}<div class="invalid-feedback">{{errors.name}}</div>{{/if}}
        </div>

        <!-- Email input -->
        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <input type="email" id="email" name="email" class="form-control {{#if errors.email }}is-invalid{{/if}}" placeholder="juanPerez@gmail.com"/>
          <label class="form-label" for="email">Email*</label>
          {{#if errors.email}}<div class="invalid-feedback">{{errors.email}}</div>{{/if}}
        </div>

        <!-- Password input -->
        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <input type="password" id="passwordRegister" name="password" class="form-control {{#if errors.password }}is-invalid{{/if}}" placeholder="Minimo 8 caracteres"/>
          <label class="form-label" for="passwordRegister">Contraseña*</label>
          {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
        </div>

        <!-- Gender input -->
        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <select class="form-select" name="gender" id="gender" aria-label="Multiple select example">
            <option value="male">Hombre</option>
            <option value="female">Mujer</option>
            <option value="other">Otro</option>
          </select>
          <label for="gender">Género*</label>
        </div>

        <!-- Photo input -->
        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <input type="text" id="photo" name="photo" class="form-control"/>
          <label class="form-label" for="photo">Foto avatar</label>
        </div>

        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <select class="form-select" name="instruments" multiple aria-label="Multiple select example">
            <option value="Voz">Voz</option>
            <option value="Coros">Coros</option>
            <option value="Guitarra">Guitarra</option>
            <option value="Bajo">Bajo</option>          
            <option value="Teclado">Teclado</option>
            <option value="Batería">Batería</option>
            <option value="Piano">Piano</option>
            <option value="Saxofón">Saxofón</option>
            <option value="Arpa">Arpa</option>
            <option value="Acordeón">Acordeón</option>
            <option value="Banjo">Banjo</option>
            <option value="Bagpipes">Bagpipes</option>
            <option value="Cello">Cello</option>
            <option value="Charango">Charango</option>
            <option value="Clarinete">Clarinete</option>
            <option value="Contrabajo">Contrabajo</option>
            <option value="Congas">Congas</option>
            <option value="Cítara">Cítara</option>
            <option value="Cuerno Francés">Cuerno Francés</option>
            <option value="Djembe">Djembe</option>
            <option value="Didgeridoo">Didgeridoo</option>
            <option value="Dulcémele">Dulcémele</option>
            <option value="Erhu">Erhu</option>
            <option value="Flauta">Flauta</option>
            <option value="Gaita">Gaita</option>
            <option value="Gong">Gong</option>
            <option value="Harmónica">Harmónica</option>
            <option value="Kalimba">Kalimba</option>
            <option value="Koto">Koto</option>
            <option value="Mandolina">Mandolina</option>
            <option value="Marimba">Marimba</option>
            <option value="Melódica">Melódica</option>
            <option value="Oboe">Oboe</option>
            <option value="Pandereta">Pandereta</option>
            <option value="Sitar">Sitar</option>
            <option value="Shakuhachi">Shakuhachi</option>
            <option value="Steel Drum">Steel Drum</option>
            <option value="Trombón">Trombón</option>
            <option value="Trompeta">Trompeta</option>
            <option value="Theremin">Theremin</option>
            <option value="Tuba">Tuba</option>
            <option value="Ukelele">Ukelele</option>
            <option value="Viola">Viola</option>
            <option value="Violín">Violín</option>
            <option value="Xilófono">Xilófono</option>
            <option value="Zampoña">Zampoña</option>
          </select>
          <label for="instruments">Instrumentos</label>
        </div>

        <!-- Description input -->
        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <textarea type="textarea" id="description" name="description" class="form-control {{#if errors.description }}is-invalid{{/if}}"></textarea>
          <label class="form-label" for="description">Biografía*</label>
          {{#if errors.description}}<div class="invalid-feedback">{{errors.description}}</div>{{/if}}
        </div>

        <!-- Location input -->
        <div data-mdb-input-init class="form-outline mb-4 w-75">
          <input type="text" id="location" name="location" class="form-control {{#if errors.location }}is-invalid{{/if}}" />
          <label class="form-label" for="location">Localización</label>
          {{#if errors.location}}<div class="invalid-feedback">{{errors.location}}</div>{{/if}}
        </div>
      </div>
      

      <div class="d-flex flex-column justify-content-center align-content-center align-items-center">
        <div class="input-group mb-2 w-75">
          <span class="input-group-text" id="socialMedia" style="width: 40px;"><i class="fab fa-instagram"></i></span>
          <input type="text" class="form-control" name="socialMedia"/>
        </div>

        <div class="input-group mb-2 w-75">
          <span class="input-group-text" id="socialMedia" style="width: 40px;"><i class="fab fa-facebook-square"></i></span>
          <input type="text" class="form-control" name="socialMedia"/>
        </div>

        <div class="input-group mb-2 w-75">
          <span class="input-group-text" id="socialMedia" style="width: 40px;"><i class="fab fa-twitter"></i></span>
          <input type="text" class="form-control" name="socialMedia"/>
        </div>

        <div class="input-group mb-2 w-75">
          <span class="input-group-text" id="socialMedia" style="width: 40px;"><i class="fab fa-linkedin"></i></span>
          <input type="text" class="form-control" name="socialMedia"/>
        </div>
        <div class="input-group mb-2 w-75">
          <span class="input-group-text" id="socialMedia" style="width: 40px;"><i class="fab fa-youtube"></i></span>
          <input type="text" class="form-control" name="socialMedia"/>
        </div>
      
      


        <!-- Checkbox -->
        <div class="form-check d-flex justify-content-center mb-4">
          <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked aria-describedby="registerCheckHelpText"/>
          <label class="form-check-label" for="registerCheck">
            He leído y acepto los términos
          </label>
        </div>

        <!-- Submit button -->
        <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block mb-3 w-25">Registrame</button>
      </div>
    </form>
  </div>
</section>
