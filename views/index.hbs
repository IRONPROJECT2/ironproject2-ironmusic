
<main>
{{!-- TOP 10 BANDS --}}
  <section class="text-center"> 
    <h2 class="mt-5">LAS TOP-10 BANDAS DEL MOMENTO YA ESTÁN AQUÍ</h2>
    
    <table class="table table-dark table-striped-columns my-5 mx-auto w-75">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre de la banda</th>
          <th scope="col">Estilo musical</th>
          <th scope="col">Integrantes</th>
        </tr>
      </thead>
      <tbody>
        {{#each rating}}
        <tr>
            <th scope="row">
              <p class="fs-5">{{@index}}</p>
            </th>
          
          <td>
            <div class="d-flex justify-content-center align-items-center">
              <a href="/band/{{id}}/detail" class="d-flex justify-content-center align-items-center text-decoration-none text-white">
                <img src="{{photo}}" alt="" style="width: 45px; height: 45px" class="rounded-circle"/>
                <div class="ms-3">
                  <p class="text-uppercase mb-1 fs-5">{{name}}</p>
                </div>
              </a>
            </div>
          </td>
          <td class="fs-5">{{musicalGenre}}</td>
          <td>
            <ul class="list-unstyled d-flex flex-column justify-content-center align-content-center align-items-center">
              {{#each members}}
                <li class="fs-5">{{this.name}}</li>
              {{/each}}
            </ul>
          </td>
          {{/each}}
        </tr>   
        
      </tbody>
    </table>


    <hr class="w-75 mx-auto my-5">
  </section>



  {{!-- NEW ARTISTS --}}
  <section class="text-center my-5"> 
    <h2>LOS NUEVOS ARTISTAS LLEGAN PISANDO FUERTE</h2>
  </section>
  
  <section class="">
    <div class="w-75 mx-auto">
      <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          {{#each bands}}
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}" aria-label="Slide {{@index}}"></button>
          {{/each}}
          </div>
        <div class="carousel-inner">
          {{#each bands}}
            <div class="carousel-item {{#if @first}}active{{/if}}" style="height: 500px;">
              <a href="/band/{{id}}/detail">
                <img src="{{photo}}" class="d-block w-100" alt="new artist poster">
                <div class="carousel-caption bg-dark opacity-75">
                  <h5 class="text-uppercase fs-5">{{name}}</h5>
                  <p class="fs-5">{{biography}}</p>
                </div>
              </a>
            </div>
          {{/each}}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    
    <hr class="w-75 mx-auto my-5">
</section>
    
  
