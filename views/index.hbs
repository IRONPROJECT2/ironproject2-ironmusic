  {{!-- COMUNITY --}}
    <section class="text-center my-5"> 
      <h2 class="my-5">ENTRA A LA MAYOR COMUNIDAD DE MÚSICOS DE INTERNET</h2>
    </section>
  <section class="container text-center my-5">
    <div class="d-flex flex-wrap justify-content-around m-3">
      
      <div class="card shadow-lg p-3 my-5 card1" style="width: 18rem; position: relative;">
          <a href="/bandjam" class="text-decoration-none">
            <img src="https://d1rs3px2gf3dlr.cloudfront.net/media/blog/featured/RockBand4-KeyArt-1080p.png" class="card-img-top card-imgNoMove shadow-img1 rounded-4" alt="musicians playing music">
