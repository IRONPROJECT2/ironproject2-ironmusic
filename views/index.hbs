    </div>

    <hr class="w-75 mx-auto my-5">
  </section>

  
  {{!-- PROXIMOS EVENTOS --}}
<section class="text-center my-5"> 
  <h2>PRÓXIMOS CONCIERTOS</h2>
</section>
<section class="container text-center my-5">
  <div class="d-flex justify-content-center align-items-center">
    {{#each concerts}}
      <div class="card shadow-lg mx-2" style="width: 18rem;">
        <img src="{{photo}}" class="card-img-top" alt="artist" style="height: 160px;">
        <div class="text-center d-flex flex-column h-100">
          <h5 class="card-title mt-1">{{name}}</h5>
          <p class="d-inline-block">{{descriptionGenre}}</p>
          <p class="d-inline-block">{{location}}</p>
          <p class="d-inline-block">{{formatDate date}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</section>


</main>


